<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.Icon?>
<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>

<View xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.dysconcsa.pancasan.views.rubro.FilterPresenter">
    <top>
        <ToolBar fx:id="toolBar">
            <items>
                <TextField fx:id="searchField" promptText="Buscar caja" />
                <Button mnemonicParsing="false" onAction="#search">
                    <graphic>
                        <Icon content="SEARCH"/>
                    </graphic>
                </Button>
                <Button mnemonicParsing="false" onAction="#close">
                    <graphic>
                        <Icon content="CLEAR"/>
                    </graphic>
                </Button>
            </items>
        </ToolBar>
    </top>
</View>
